<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">
    <section name="quote">
        <group name="totals">
            <item name="fee_amount" instance="Surchx\Surcharge\Model\Quote\Address\Total\Fee" sort_order="150"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="fee_amount" instance="Surchx\Surcharge\Model\Order\Total\Invoice\Fee" sort_order="160"/>
        </group>
    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="fee_amount" instance="Surchx\Surcharge\Model\Order\Total\Creditmemo\Fee" sort_order="160"/>
        </group>
    </section>
</config>